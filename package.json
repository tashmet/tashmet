{
  "name": "tashmet",
  "version": "1.1.0",
  "private": true,
  "description": "Tashmet is an isomorphic publishing platform",
  "type": "module",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "clean": "rimraf packages/**/dist packages/**/*/dist dist",
    "commit": "git-cz",
    "lint": "lerna run --no-bail lint",
    "test": "npm run test:packages && npm run test:integration && npm run test:e2e",
    "test:packages": "lerna run test",
    "test:integration": "mocha --config test/integration/.mocharc.json",
    "test:e2e": "start-server-and-test test:e2e-server http://localhost:8000/api/test test:e2e-client",
    "test:e2e-client": "mocha --config test/e2e/.mocharc.json",
    "test:e2e-server": "ts-node --esm ./test/server.ts"
  },
  "author": "Bj√∂rn Andersson",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/fetch-mock": "^7.3.2",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-fetch-mock": "^3.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "fetch-mock": "^6.0.0",
    "lerna": "^3.20.2",
    "mocha": "^9.1.1",
    "node-fetch": "^2.6.0",
    "rimraf": "^3.0.2",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0",
    "start-server-and-test": "^1.10.11",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
